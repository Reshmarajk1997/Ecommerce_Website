<section>
  <div class="container">
    <div class="row  mt-4">
      {{!-- <div class="col-md-6"> --}}
        <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
      {{!-- </div> --}}

    </div>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">Sl No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
          <tr>
            <th scope="row">{{@index}}</th>

            <td>{{this.Name}}</td>
            <td>{{this.Catagory}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img
                src="/product-images/{{this._id}}.jpg"
                
                style="height: 50px; width: 50px;"
                alt=""
              /></td>
             <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a></td> 
             <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}}')">Delete</a></td> 
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>